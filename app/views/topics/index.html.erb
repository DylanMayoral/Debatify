<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-6">
      <div class="row justify-content-center">
        <div class="col-sm-8 my-3">
          <%= form_with url: topics_path, method: :get, class: "search-box2" do %>
            <%= text_field_tag :query, params[:query], class: "search-input2", placeholder: "Search topics...", id:"search-bar" %>
            <%= button_tag(type: 'submit', class: "search-btn2") do %>
              <i class="fas fa-search"></i>
            <% end %>
          <% end %>
        </div>
      </div>
      <% @topics.each do |topic| %>
        <div class="topic-card my-5">
          <div class="d-flex align-items-center mb-3">
            <div class="avatar-placeholder me-2"></div>
            <p class="username"> <%= topic.user.name %> </p>
          </div>
          <h3 mb-2> <%= topic.title %> </h3>
          <div class="d-flex align-items-center justify-content-between">
            <p class="mb-0"> <%= topic.description %> </p>
            <%= link_to "Open", topic_path(topic), class: "gumroad"%>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>

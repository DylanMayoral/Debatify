<div class="news-form">
<%= simple_form_for @topic do |f| %>
    <%= f.input :title %>
    <%= f.input :description %>
    <%= f.input :category, collection: ['Tech', 'Finance', 'Politics', 'Sports', 'Food', 'Celebrities', 'Education'] %>
    <%= f.submit "Submit topic", class:"button" %>
<% end %>
</div>
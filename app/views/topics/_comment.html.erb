<div class="main-comment my-3 d-flex flex-column" data-controller="vote" data-vote-id="<%= comment.id %>">
  <div class="d-flex align-items-center justify-content-between">
    <div class="d-flex align-items-center">
      <div class="avatar-placeholder me-2"></div>
      <p class="username"> <%= comment.user.name %> </p>
    </div>
  </div>
  <div class="d-flex">
    <div class="d-flex mt-3">
      <p class="mb-0"> <%= comment.content %> </p>
    </div>
  </div>
  <div class="d-flex justify-content-between mt-3">
    <div class="d-flex align-items-center mt-0">
      <i class="fa-regular fa-comments"></i>
      <p > <%= comment.comments.count %> </p>
    </div>
    <div class="d-flex align-items-center">
      <% if comment.parent_id == nil %>
        <%= render 'topics/button', comment: comment %>
        <p class="mb-0" id="vote-count-<%= comment.id %>" data-vote-target="voteCount"> <%= comment.votes.count %> </p>
        <%= render 'topics/form', comment: comment %>
      <% end %>
    </div>
  </div>
</div>
<!-- below is reply -->
<%= render 'reply', comment: comment %>

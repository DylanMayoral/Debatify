<div class="card" style="max-width: 500px; margin: auto; padding: 25px; border-radius: 16px; box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1); margin-top: 190px;">
  <h2 style="text-align: center;">Log in</h2>

  <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="form-inputs">
      <%= f.input :email,
                  required: false,
                  autofocus: true,
                  input_html: { autocomplete: "email", class: "form-control" } %>
      <%= f.input :password,
                  required: false,
                  input_html: { autocomplete: "current-password", class: "form-control" } %>
      <%= f.input :remember_me, as: :boolean, label: "Remember me" if devise_mapping.rememberable? %>
    </div>

    <div class="form-actions" style="text-align: center;">
      <%= f.button :submit, "Log in", class: "btn btn-primary" %>
    </div>
  <% end %>

  <div style="text-align: center; margin-top: 10px;">
    <%= render "devise/shared/links" %>
  </div>
</div>

<div class="container-home text-center">
  <h1 class="debatify">Debatify</h1>
  <p class="debatify-p">Your voice. Your impact.</p>
  <%= form_with url: topics_path, method: :get, local: true, class: "search-box" do %>
    <%= text_field_tag :query, nil, placeholder: "Search anything ...", class: "search-input" %>
    <%= button_tag(type: 'submit', class: "search-btn") do %>
      <i class="fas fa-search"></i>
    <% end %>
  <% end %>
</div>
